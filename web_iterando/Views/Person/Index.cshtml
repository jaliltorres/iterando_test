@model IEnumerable<web_iterando.Models.Person>

@{
    ViewBag.Title = "Index";
}

<h2>List Person</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Person_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Person_lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Person_number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Person_address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Person_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Person_lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Person_number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Person_address)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Person_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Person_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Person_id })
        </td>
    </tr>
}

</table>

 <br />
    <p class="btn btn-default">
        @Html.ActionLink("Create new person", "Create")
    </p>
